{
  "name": "client",
  "version": "0.0.1",
  "private": true,
  "homepage": ".",
  "main": "electron/main.js",
  "description": "Backoffice application",
  "author": "Backoffice",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "react-scripts start",
    "dev:server": "node server/server.js",
    "build": "react-scripts build",
    "postbuild": "node scripts/copy-electron.js && node scripts/copy-server.js",
    "package:win": "npm run build && electron-builder",
    "build:electron": "npm run package:win",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "^6.30.1",
    "recharts": "^3.6.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "react-scripts": "^5.0.1",
    "tailwindcss": "^3.4.18"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.backoffice",
    "productName": "backoffice",
    "extends": null,
    "files": [
      "electron/**/*",
      "build/**/*",
      "!build/server/**/*",
      "package.json",
      "!**/*.map"
    ],
    "asarUnpack": [
      "build/**/*",
      "!build/server/**/*"
    ],
    "extraResources": [
      {
        "from": "build/server",
        "to": "server",
        "filter": ["**/*", "!node_modules", "!node_modules/**"]
      },
      {
        "from": "build/server/node_modules",
        "to": "server/node_modules"
      },
      {
        "from": "data",
        "to": "data",
        "filter": ["**/*"]
      },
      {
        "from": "build/server/node_modules/sql.js/dist",
        "to": "sqljs",
        "filter": ["*.wasm", "*.js"]
      }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
